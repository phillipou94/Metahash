<head> 

<script src="assets/javascripts/jquery.js"></script>


<script>
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");

  });
</script>
</head>

<body>
  <% if logged_in? %> 
  <div id="wrapper">
    <div id="sidebar-wrapper">

      <ul class="sidebar-nav">

        <li class="sidebar-brand">
          <a href="#" id="Trending-Banner">   </a>
        </li>
              
        <%-#load_trends is in static pages helper %>
        <% Trend.last(10).each do |trend| %>
           <li><%= link_to trend.title, trend %></li>
        <% end %>

      </ul>
  </div>

</div>

<!-- Page Content -->
<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="center jumbotron">
         <% @all_trends.each do |trend| %>
         	<div class = "trend_list_item"> 
         		<h3 class="list-itemInfo">  <%= link_to trend.title, trend %> </h4>
         		<h4> <%= time_ago_in_words(trend.created_at) %> ago </h4>
         	</div>
         <%end %>

         <%= will_paginate @all_trends %>
          

        </div>



        </ul>
      </div>
    </div>
  </div>
</div>



<% end %>