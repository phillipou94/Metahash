<% provide(:title, 'Metahash') %>


<% if !logged_in? %>
<div class="center jumbotron">
	<div class = "header-title">meta#ash</div>

  <%= link_to "Signup", new_user_path, :class => "button grow" %>

</div>
<% end %>



<ul class="users content-float">
  <% @topics.each do |topic| %>
  <li>
    <%= link_to topic.title, topic %>
  </li>
  <% end %>
</ul>

<% if false %>
<ul class = "trends">
  <%-# name,query,url -%>
  <%= @trends.each do |trend| %>
    <li> <%= trend["name"]%>  </li>   
  <%end %>
</ul>
<%end %>


